---
/**
 * Footer Contact Information
 * Displays contact details in footer
 */
interface Props {
  email: string;
  phone: string;
}

const { email, phone } = Astro.props;
---

<div class="lg:col-span-2">
  <h3 class="text-base font-semibold tracking-wider text-white">Hubungi Kami</h3>
  <ul class="mt-4 space-y-4">
    <li class="flex items-center gap-x-3">
      <i class="fa-solid fa-envelope w-5 text-center text-slate-400" aria-hidden="true"></i>
      <a
        href={`mailto:${email}`}
        class="transition-colors duration-300 hover:text-blue-400 focus:text-blue-400 focus:outline-none"
        aria-label={`Kirim email ke ${email}`}
      >
        {email}
      </a>
    </li>
    <li class="flex items-center gap-x-3">
      <i class="fa-solid fa-phone w-5 text-center text-slate-400" aria-hidden="true"></i>
      <span>{phone}</span>
    </li>
  </ul>
</div>

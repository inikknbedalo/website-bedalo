---
/**
 * Content Error Fallback
 * Displayed when content fails to load
 */

interface Props {
  message?: string;
  showRetry?: boolean;
}

const { 
  message = 'Konten tidak dapat dimuat saat ini.',
  showRetry = true 
} = Astro.props;
---

<div 
  class="content-error-fallback rounded-lg border border-yellow-200 bg-yellow-50 p-8 text-center"
  data-aos="fade-in"
>
  <div class="mb-4">
    <i class="fas fa-exclamation-triangle text-4xl text-yellow-600"></i>
  </div>
  
  <h3 class="mb-2 text-lg font-semibold text-gray-800">
    Konten Tidak Tersedia
  </h3>
  
  <p class="mb-4 text-gray-600">
    {message}
  </p>
  
  {showRetry && (
    <button
      onclick="window.location.reload()"
      class="inline-flex items-center gap-2 rounded-lg bg-yellow-600 px-4 py-2 text-white transition-colors hover:bg-yellow-700"
    >
      <i class="fas fa-sync-alt"></i>
      Coba Lagi
    </button>
  )}
</div>

<style>
  .content-error-fallback {
    min-height: 200px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
</style>

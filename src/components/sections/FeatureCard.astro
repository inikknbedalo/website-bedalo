---
import Card from '../ui/Card.astro';

interface Props {
  icon: string;
  title: string;
  description: string;
  link?: string;
  iconColor?: string;
}

const { icon, title, description, link, iconColor = 'text-blue-600' } = Astro.props;

const Component = link ? 'a' : 'div';
---

<Card variant="hover" class={link ? 'cursor-pointer' : ''}>
  <Component
    href={link}
    data-astro-prefetch={link ? true : undefined}
    class="block text-center"
  >
    <div class:list={['mb-4', iconColor, '']}>
      <i class:list={[icon, 'text-4xl']} />
    </div>
    <h3 class="mb-2 text-xl font-bold text-gray-800">
      {title}
    </h3>
    <p class="text-gray-600">
      {description}
    </p>
    {link && <span class="mt-4 inline-block text-sm font-semibold text-blue-600">Lihat Selengkapnya â†’</span>}
  </Component>
</Card>

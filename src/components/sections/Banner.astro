---
interface Props {
  title: string;
  subtitle?: string;
  background?: 'blue' | 'gradient' | 'gray';
  class?: string;
}

const { title, subtitle, background = 'gradient', class: className = '' } = Astro.props;

const backgroundClasses = {
  blue: 'bg-blue-600',
  gradient: 'bg-gradient-to-br from-blue-600 to-cyan-700',
  gray: 'bg-gray-100',
};
---

<section class:list={['py-12 md:py-16', className]}>
  <div class="container mx-auto px-6">
    <div
      class:list={[
        'mx-auto max-w-3xl rounded-xl p-8 text-center shadow-lg transition-all duration-300 hover:-translate-y-1 hover:scale-[1.02] hover:shadow-xl md:p-10',
        backgroundClasses[background],
        background === 'gray' ? 'text-gray-800' : 'text-white',
      ]}
    >
      <h1 class="mb-3 text-3xl font-bold md:text-4xl">
        {title}
      </h1>
      {subtitle && <p class:list={['text-lg', background === 'gray' ? 'text-gray-600' : 'text-blue-100']}>{subtitle}</p>}
      <slot name="breadcrumb" />
    </div>
  </div>
</section>

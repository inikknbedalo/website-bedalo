---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import Card from '../ui/Card.astro';
import Badge from '../ui/Badge.astro';
import { truncate } from '../../utils/format';

interface Props {
  product: CollectionEntry<'potensi'>;
  class?: string;
}

const { product, class: className = '' } = Astro.props;
const { title, description, category, price, image, imageAlt, featured } = product.data;
---

<Card variant="hover" class={className}>
  <a href={`/potensi/${product.id}`} data-astro-prefetch class="block relative">
    {featured && (
      <div class="absolute top-4 right-4 z-10">
        <Badge variant="warning" size="sm">
          <i class="fas fa-star mr-1"></i>
          Unggulan
        </Badge>
      </div>
    )}
    <div class="aspect-video overflow-hidden rounded-lg bg-gray-200">
      <Image
        src={image}
        alt={imageAlt}
        class="h-full w-full object-cover transition-transform duration-300 hover:scale-110"
        widths={[400, 600, 800]}
        sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
      />
    </div>
    <div class="mt-4">
      <Badge variant="primary" size="sm">
        {category}
      </Badge>
      <h3 class="mt-2 text-xl font-bold text-gray-800 line-clamp-2">
        {title}
      </h3>
      <p class="mt-2 text-gray-600 line-clamp-2">
        {truncate(description, 100)}
      </p>
      <div class="mt-4 flex items-center justify-between">
        <span class="text-lg font-bold text-green-600">
          {price}
        </span>
        <span class="text-sm text-blue-600">
          Lihat Detail â†’
        </span>
      </div>
    </div>
  </a>
</Card>

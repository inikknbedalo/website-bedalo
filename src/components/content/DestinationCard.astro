---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import Card from '../ui/Card.astro';
import Badge from '../ui/Badge.astro';
import { truncate } from '../../utils/format';

interface Props {
  destination: CollectionEntry<'pariwisata'>;
  class?: string;
}

const { destination, class: className = '' } = Astro.props;
const { title, description, location, entrance, image, imageAlt, featured } = destination.data;
---

<Card variant="hover" class={className}>
  <a href={`/pariwisata/${destination.id}`} data-astro-prefetch class="block relative">
    {featured && (
      <div class="absolute top-4 right-4 z-10">
        <Badge variant="warning" size="sm">
          <i class="fas fa-star mr-1"></i>
          Unggulan
        </Badge>
      </div>
    )}
    <div class="aspect-video overflow-hidden rounded-lg bg-gray-200">
      <Image
        src={image}
        alt={imageAlt}
        class="h-full w-full object-cover transition-transform duration-300 hover:scale-110"
        widths={[400, 600, 800]}
        sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
      />
    </div>
    <div class="mt-4">
      <h3 class="text-xl font-bold text-gray-800 line-clamp-2">
        {title}
      </h3>
      <div class="mt-2 flex items-start text-sm text-gray-600">
        <i class="fas fa-map-marker-alt mr-2 mt-1 text-red-500"></i>
        <span class="line-clamp-1">{location}</span>
      </div>
      <p class="mt-2 text-gray-600 line-clamp-3">
        {truncate(description, 120)}
      </p>
      <div class="mt-4 flex items-center justify-between">
        <Badge variant="success" size="sm">
          {entrance}
        </Badge>
        <span class="text-sm font-semibold text-blue-600">
          Jelajahi â†’
        </span>
      </div>
    </div>
  </a>
</Card>

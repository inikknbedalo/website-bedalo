---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import Badge from '../ui/Badge.astro';
import { formatDate, truncate } from '../../utils/format';

interface Props {
  article: CollectionEntry<'berita'>;
  class?: string;
}

const { article, class: className = '' } = Astro.props;
const { title, description, pubDate, author, image, imageAlt, category } = article.data;
---

<article class={`group rounded-lg border border-gray-200 bg-white hover:border-blue-600 hover:shadow-lg transition-all ${className}`}>
  <a href={`/berita/${article.id}`} data-astro-prefetch class="flex flex-col sm:flex-row">
    <div class="sm:w-1/3 aspect-video sm:aspect-square overflow-hidden rounded-t-lg sm:rounded-l-lg sm:rounded-tr-none bg-gray-200">
      <Image
        src={image}
        alt={imageAlt}
        class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-110"
        widths={[300, 400, 600]}
        sizes="(max-width: 640px) 100vw, 33vw"
      />
    </div>
    <div class="flex-1 p-5 sm:w-2/3">
      <Badge variant="primary" size="sm">
        {category}
      </Badge>
      <h3 class="mt-2 text-xl font-bold text-gray-900 line-clamp-2 group-hover:text-blue-600">
        {title}
      </h3>
      <p class="mt-2 text-gray-600 line-clamp-3">
        {truncate(description, 150)}
      </p>
      <div class="mt-4 flex items-center justify-between">
        <div class="flex items-center text-sm text-gray-500">
          <span>{author}</span>
          <span class="mx-2">â€¢</span>
          <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
        </div>
        <span class="inline-flex items-center gap-1 text-sm font-semibold text-blue-600 group-hover:gap-2 transition-all">
          Baca Selengkapnya
          <i class="fas fa-arrow-right text-xs"></i>
        </span>
      </div>
    </div>
  </a>
</article>

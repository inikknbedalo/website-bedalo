---
/**
 * Dashboard Statistics Cards Component
 * Displays key metrics for aspirations data
 */
---

<section class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
  <!-- Total Aspirasi -->
  <div class="flex items-center space-x-4 rounded-lg bg-white p-6 shadow-lg transition-transform hover:scale-105">
    <div class="rounded-full bg-blue-100 p-3">
      <i class="fas fa-bullhorn text-2xl text-blue-500"></i>
    </div>
    <div>
      <p class="text-sm text-gray-500">Total Aspirasi</p>
      <p id="total-aspirasi" class="text-2xl font-bold text-gray-800">
        0
      </p>
    </div>
  </div>

  <!-- Aspirasi Minggu Ini -->
  <div class="flex items-center space-x-4 rounded-lg bg-white p-6 shadow-lg transition-transform hover:scale-105">
    <div class="rounded-full bg-green-100 p-3">
      <i class="fas fa-calendar-week text-2xl text-green-500"></i>
    </div>
    <div>
      <p class="text-sm text-gray-500">Aspirasi Minggu Ini</p>
      <p id="aspirasi-this-week" class="text-2xl font-bold text-gray-800">
        0
      </p>
    </div>
  </div>

  <!-- Subjek Terbanyak -->
  <div class="flex items-center space-x-4 rounded-lg bg-white p-6 shadow-lg transition-transform hover:scale-105">
    <div class="rounded-full bg-purple-100 p-3">
      <i class="fas fa-tag text-2xl text-purple-500"></i>
    </div>
    <div>
      <p class="text-sm text-gray-500">Subjek Terbanyak</p>
      <p id="most-common-subject" class="text-lg font-bold text-gray-800">
        -
      </p>
    </div>
  </div>

  <!-- Aspirasi Terbaru -->
  <div class="flex items-center space-x-4 rounded-lg bg-white p-6 shadow-lg transition-transform hover:scale-105">
    <div class="rounded-full bg-yellow-100 p-3">
      <i class="fas fa-calendar-alt text-2xl text-yellow-500"></i>
    </div>
    <div>
      <p class="text-sm text-gray-500">Aspirasi Terbaru</p>
      <p id="latest-aspirasi-date" class="text-lg font-bold text-gray-800">
        -
      </p>
    </div>
  </div>
</section>

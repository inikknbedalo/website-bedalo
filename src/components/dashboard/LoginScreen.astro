---
/**
 * Login Screen Component
 * Password-protected authentication screen for dashboard access
 */
---

<!-- Login Screen Overlay with Blur -->
<div id="login-screen" class="fixed inset-0 z-[9999]" style="display: none;">
  <!-- Blurred Background -->
  <div class="absolute inset-0 backdrop-blur-md bg-black/20"></div>
  
  <!-- Login Card -->
  <div class="relative z-10 flex items-center justify-center min-h-screen p-4">
    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-md overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-blue-600 to-blue-800 p-8 text-center">
        <div class="w-20 h-20 bg-white rounded-full mx-auto mb-4 flex items-center justify-center">
          <i class="fas fa-chart-line text-blue-600 text-3xl"></i>
        </div>
        <h2 class="text-2xl font-bold text-white mb-2">Dashboard Aspirasi</h2>
        <p class="text-blue-100 text-sm">Desa Bedalo - KKN 117 UMRAH</p>
      </div>
      
      <!-- Form -->
      <div class="p-8">
        <form id="login-form" class="space-y-6">
          <div>
            <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">
              <i class="fas fa-lock mr-2 text-gray-500"></i>Password
            </label>
            <div class="relative">
              <input
                type="password"
                id="password"
                placeholder="Masukkan password"
                class="w-full px-4 py-3 pr-12 border-2 border-gray-300 rounded-lg focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition-all outline-none"
                required
              />
              <button
                type="button"
                id="toggle-password"
                class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-colors focus:outline-none"
                aria-label="Toggle password visibility"
              >
                <i class="fas fa-eye text-lg"></i>
              </button>
            </div>
          </div>
          
          <div id="login-error" class="hidden bg-red-50 border-l-4 border-red-500 p-4 rounded-lg">
            <div class="flex items-center text-red-700">
              <i class="fas fa-exclamation-circle mr-2"></i>
              <span class="text-sm font-medium"></span>
            </div>
          </div>
          
          <button
            type="submit"
            id="login-button"
            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-all transform hover:scale-[1.02] active:scale-[0.98] shadow-lg hover:shadow-xl"
          >
            <i class="fas fa-sign-in-alt mr-2"></i>
            Login
          </button>
        </form>
        
        <!-- Info -->
        <div class="mt-6 pt-6 border-t border-gray-200">
          <p class="text-center text-sm text-gray-500">
            <i class="fas fa-info-circle mr-1"></i>
            Hubungi admin untuk informasi akses
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

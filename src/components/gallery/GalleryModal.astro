<div
  id="gallery-modal"
  class="fixed inset-0 z-50 hidden items-center justify-center bg-black/90 p-4"
  role="dialog"
  aria-modal="true"
  aria-labelledby="gallery-modal-title"
>
  <button
    type="button"
    id="close-modal"
    class="absolute right-4 top-4 z-10 rounded-full bg-white/10 p-3 text-white backdrop-blur-sm transition-all duration-300 hover:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white"
    aria-label="Close gallery"
  >
    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>

  <button
    type="button"
    id="prev-image"
    class="absolute left-4 top-1/2 -translate-y-1/2 rounded-full bg-white/10 p-3 text-white backdrop-blur-sm transition-all duration-300 hover:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white"
    aria-label="Previous image"
  >
    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"
      ></path>
    </svg>
  </button>

  <button
    type="button"
    id="next-image"
    class="absolute right-4 top-1/2 -translate-y-1/2 rounded-full bg-white/10 p-3 text-white backdrop-blur-sm transition-all duration-300 hover:bg-white/20 focus:outline-none focus:ring-2 focus:ring-white"
    aria-label="Next image"
  >
    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
  </button>

  <div class="relative max-h-[90vh] max-w-[90vw]">
    <img
      id="modal-image"
      src=""
      alt=""
      class="max-h-[90vh] max-w-[90vw] object-contain"
      loading="lazy"
    />
    <p id="gallery-modal-title" class="mt-4 text-center text-white" aria-live="polite"></p>
  </div>
</div>

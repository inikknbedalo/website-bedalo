---
interface Props {
  categories: string[];
}

const { categories } = Astro.props;
---

<div class="mb-8 flex flex-wrap justify-center gap-3">
  {
    categories.map((category) => (
      <button
        type="button"
        class="gallery-filter rounded-full bg-white px-6 py-2 text-sm font-semibold text-gray-700 shadow-md transition-all duration-300 hover:bg-blue-600 hover:text-white hover:shadow-lg focus:bg-blue-600 focus:text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
        data-category={category.toLowerCase()}
        aria-label={`Filter gambar kategori ${category}`}
      >
        {category}
      </button>
    ))
  }
</div>

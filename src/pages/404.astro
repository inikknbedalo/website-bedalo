---
import MainLayout from '../layouts/MainLayout.astro';
import { getEntry } from 'astro:content';
import Section from '../components/ui/Section.astro';
import Button from '../components/ui/Button.astro';

const pageContent = await getEntry('pages', '404');

if (!pageContent || !('page' in pageContent.data) || pageContent.data.page !== '404') {
  throw new Error('404 page content not found');
}

const { title, message, icon, iconColor, actions } = pageContent.data;
---

<MainLayout title={`${title} - Dusun Bedalo`} description={message}>
  <Section background="white">
    <div class="mx-auto max-w-2xl py-16 text-center">
      <div class="mb-8">
        <i class:list={[icon, 'text-8xl', `text-${iconColor}`]}></i>
      </div>

      <h1 class="mb-4 text-6xl font-bold text-gray-800">404</h1>

      <h2 class="mb-4 text-2xl font-semibold text-gray-700">
        {title}
      </h2>

      <p class="mb-8 text-gray-600">
        {message}
      </p>

      <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
        {actions.map((action) => (
          <Button 
            href={action.href} 
            variant={action.variant} 
            size="lg"
          >
            <i class={action.icon}></i>
            {action.label}
          </Button>
        ))}
      </div>

      <div class="mt-12">
        <h3 class="mb-4 text-lg font-semibold text-gray-800">
          Halaman Populer
        </h3>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="/profil"
            data-astro-prefetch
            class="text-blue-600 hover:underline"
          >
            Profil Dusun
          </a>
          <span class="text-gray-400">•</span>
          <a
            href="/berita"
            data-astro-prefetch
            class="text-blue-600 hover:underline"
          >
            Berita
          </a>
          <span class="text-gray-400">•</span>
          <a
            href="/potensi"
            data-astro-prefetch
            class="text-blue-600 hover:underline"
          >
            Potensi
          </a>
          <span class="text-gray-400">•</span>
          <a
            href="/pariwisata"
            data-astro-prefetch
            class="text-blue-600 hover:underline"
          >
            Pariwisata
          </a>
          <span class="text-gray-400">•</span>
          <a
            href="/kontak"
            data-astro-prefetch
            class="text-blue-600 hover:underline"
          >
            Kontak
          </a>
        </div>
      </div>
    </div>
  </Section>
</MainLayout>

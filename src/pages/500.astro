---
import MainLayout from '../layouts/MainLayout.astro';
import Section from '../components/ui/Section.astro';
import Button from '../components/ui/Button.astro';

const error = Astro.url.searchParams.get('error') || 'Terjadi kesalahan yang tidak terduga';
---

<MainLayout 
  title="500 - Kesalahan Server" 
  description="Terjadi kesalahan pada server. Silakan coba lagi nanti."
>
  <Section background="white">
    <div class="mx-auto max-w-2xl py-16 text-center">
      <div class="mb-8">
        <i class="fas fa-exclamation-circle text-8xl text-red-500"></i>
      </div>

      <h1 class="mb-4 text-6xl font-bold text-gray-800">500</h1>

      <h2 class="mb-4 text-2xl font-semibold text-gray-700">
        Kesalahan Server
      </h2>

      <p class="mb-8 text-gray-600">
        Maaf, terjadi kesalahan pada server kami. Tim kami telah diberitahu dan sedang bekerja
        untuk memperbaikinya.
      </p>

      {error && error !== 'Terjadi kesalahan yang tidak terduga' && (
        <div class="mb-8 rounded-lg bg-red-50 p-4 text-left">
          <p class="text-sm text-red-800">
            <strong>Detail:</strong> {error}
          </p>
        </div>
      )}

      <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
        <Button href="/" variant="primary" size="lg">
          <i class="fas fa-home"></i>
          Kembali ke Beranda
        </Button>
        <Button 
          href="javascript:window.location.reload()" 
          variant="outline" 
          size="lg"
        >
          <i class="fas fa-sync-alt"></i>
          Muat Ulang Halaman
        </Button>
      </div>

      <div class="mt-12">
        <h3 class="mb-4 text-lg font-semibold text-gray-800">
          Apa yang bisa Anda lakukan?
        </h3>
        <div class="text-left space-y-2 mx-auto max-w-md">
          <p class="text-gray-600">
            • Coba muat ulang halaman dalam beberapa menit
          </p>
          <p class="text-gray-600">
            • Bersihkan cache browser Anda
          </p>
          <p class="text-gray-600">
            • Hubungi kami jika masalah berlanjut
          </p>
        </div>
      </div>

      <div class="mt-8">
        <p class="text-sm text-gray-500">
          Kode Error: {new Date().getTime()}
        </p>
      </div>
    </div>
  </Section>
</MainLayout>

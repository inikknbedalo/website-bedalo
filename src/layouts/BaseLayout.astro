---
import { getEntry } from 'astro:content';
import '../styles/global.css';
import '../styles/accessibility.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const siteConfigEntry = await getEntry('config', 'site');
const resourcesConfigEntry = await getEntry('config', 'resources');

if (!siteConfigEntry || !('site' in siteConfigEntry.data)) {
  throw new Error('Site configuration not found');
}

if (!resourcesConfigEntry || !('fonts' in resourcesConfigEntry.data)) {
  throw new Error('Resources configuration not found');
}

const siteConfig = siteConfigEntry.data;
const resources = resourcesConfigEntry.data;

const {
  title: defaultTitle,
  description: defaultDescription,
  url: siteUrl,
} = siteConfig.site;

const {
  title = defaultTitle,
  description = defaultDescription,
  image = siteConfig.seo?.defaultImage || `${siteUrl}/assets/images/ngedan.webp`,
  canonicalURL = Astro.url.pathname,
} = Astro.props;

const fullTitle = title === defaultTitle ? title : `${title} | ${defaultTitle}`;
const canonical = new URL(canonicalURL, siteUrl).href;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content={resources.theme.primaryColor} />

    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    <meta name="author" content={siteConfig.site.author} />
    <link rel="canonical" href={canonical} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:locale" content={siteConfig.site.locale} />
    <meta property="og:site_name" content={defaultTitle} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonical} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <title>{fullTitle}</title>

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href={resources.theme.favicon} />
    <link rel="icon" type="image/x-icon" href={resources.theme.favicon} />
    <link rel="apple-touch-icon" href={resources.theme.appleTouchIcon} />
    <link rel="manifest" href={resources.theme.manifest} />

    <!-- Preconnect for Performance -->
    {resources.fonts.map((font) =>
      font.preconnect.map((url) => (
        <link rel="preconnect" href={url} crossorigin={url.includes('gstatic') ? true : undefined} />
      ))
    )}
    {resources.cdns.map((cdn) => (
      <link rel="preconnect" href={cdn.preconnect} />
    ))}

    <!-- Fonts -->
    {resources.fonts.map((font) => (
      <link
        href={font.url}
        rel="stylesheet"
      />
    ))}

    <!-- CDN Resources -->
    {resources.cdns.map((cdn) => (
      <link
        rel="stylesheet"
        href={cdn.url}
        integrity={cdn.integrity}
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
      />
    ))}
  </head>
  <body class="bg-gray-50">
    <slot />
  </body>
</html>
